{% extends '::base.html.twig' %}

{% block body %}
     Welcome!
{% endblock %}
 

{% block description %}
	This is the new Politikportal homepage.
{% endblock %}


{% block main %}

	{% for topic in topics %}
	
    	<div class="items">

    	{% for item in topic.items %}
        
        	{% include "PolitikportalBundle:Default:item.html.twig" with { 'item' : item } only %}
			    
    	{% else %}

        	<div class="alert">No topics</div>

    	{% endfor %}

		<a href="#" class="btn btn-mini btn-info btn-topic">{{ topic.title }}</a>

    	</div>


	{% endfor %}
	
{% endblock %}


{% block sidebar %}

	Version: {{ heading }}
	
{% endblock %}